@{
    var selectedSection = Session["Section"] as string ?? "Infrastructure";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse d-sm-inline-flex justify-content-between collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("SuperHero", "Index", "SuperHero", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("User", "Index", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Role", "Index", "Role", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("UserRole", "Index", "UserRole", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Operator Dashboard", "OperatorDashboard", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Manager Dashboard", "ManagerDashboard", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Equipment", "Index", "Equipment", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div>
                <form id="sectionForm" method="post" action="@Url.Action("SetSection", "Home")">
                    <select name="section" id="sectionDropdown" class="form-control" onchange="document.getElementById('sectionForm').submit();">
                        <option value="Infrastructure" @(selectedSection == "Infrastructure" ? "selected" : "")>Infrastructure</option>
                        <option value="Application" @(selectedSection == "Application" ? "selected" : "")>Application</option>
                        <option value="Other" @(selectedSection == "Other" ? "selected" : "")>Other</option>
                    </select>
                </form>
            </div>
        </div>
    </nav>
    <div class="body-content container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
